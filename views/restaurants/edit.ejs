<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">編輯餐廳</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
            <label class="form-label" for="title">店名</label>
            <input class="form-control" type="text" id="title" name="restaurant[title]" value="<%= restaurant.title %>" required>
            </div>
            <div class="mb-3">
            <label class="form-label" for="address">地址</label>
            <input class="form-control" type="text" id="address" name="restaurant[address]" value="<%= restaurant.address %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="phone">電話</label>
                <input class="form-control" type="text" id="phone" name="restaurant[phone]" value="<%= restaurant.phone %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="time">營業時間</label>
                <input class="form-control" type="text" id="time" name="restaurant[time]" value="<%= restaurant.time %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">圖片編號</label>
                <input class="form-control" type="text" id="image" name="restaurant[image]" value="<%= restaurant.image %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="source">圖片來源</label>
                <input class="form-control" type="text" id="source" name="restaurant[source]" value="<%= restaurant.source %>" required>
            </div>
            <div class="mb-3">
            <button class="btn btn-info text-light">更新</button>
            </div>
        </form>
        <a class="btn btn-secondary" href="/restaurants/<%= restaurant._id %>">返回</a>
    </div>
</div>