<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>餐廳列表</h1>
<div class="mb-3">
    <a href="/restaurants/new" class="btn btn-info text-light">新增餐廳</a>
</div>

<% for (let restaurant of restaurants) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-3">
                <img src="<%= restaurant.image %>" alt="" class="img-fluid">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title"><%= restaurant.title %></h5>
                    <p class="card-text text-secondary"><%= restaurant.address %></p>
                    <a href="restaurants/<%= restaurant._id %>" class="btn btn-primary">現在就去！</a>
                </div>
            </div>
        </div> 
    </div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const restaurants = { features: <%- JSON.stringify(restaurants) %> }
</script>

<script src="/javascripts/clusterMap.js"></script>